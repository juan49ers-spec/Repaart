rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Funci칩n b치sica de autenticaci칩n
    function isAuthed() { return request.auth != null; }

    // PERMITIR TODO A USUARIOS AUTENTICADOS (Temporal para desbloquear)
    // Esto har치 que vuelvas a ver a tus riders y el calendario cargue.
    match /{document=**} {
      allow read, write: if isAuthed();
    }
    
    // Mantener la seguridad de perfiles de usuario
    match /users/{userId} {
      allow read, write: if isAuthed() && request.auth.uid == userId;
    }
  }
}
