rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- AUTHENTICATION HELPERS ---
    function isAuthed() {
      return request.auth != null;
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    function isAdmin() {
      return isAuthed() && getUserData().role == 'admin';
    }
    
    function isFranchise() {
      return isAuthed() && getUserData().role == 'franchise';
    }

    // --- COLLECTION RULES ---

    // USERS: Owner can read/write own profile. Admin can read/write all. Franchise can read riders.
    match /users/{userId} {
      allow read: if isAuthed() && (request.auth.uid == userId || isAdmin() || isFranchise());
      allow write: if isAuthed() && (request.auth.uid == userId || isAdmin());
    }

    // WORK SHIFTS: Franchise/Admin full access. Riders read ONLY their own.
    match /work_shifts/{shiftId} {
      allow read: if isAuthed() && (isAdmin() || isFranchise() || resource.data.riderId == request.auth.uid);
      allow write: if isAuthed() && (isAdmin() || isFranchise());
    }
    
    // FINANCIAL DATA: STRICTLY Admin/Franchise.
    match /financial_data/{docId} {
      allow read, write: if isAuthed() && (isAdmin() || isFranchise());
    }

    match /finance_closures/{closureId} {
       allow read, write: if isAuthed() && (isAdmin() || isFranchise());
    }
    
    // AUDIT LOGS: Everyone can create (logging actions), only Admin can read.
    match /audit_logs/{logId} {
      allow create: if isAuthed();
      allow read: if isAdmin();
    }
    
    // DEFAULT DENY: Critical for security.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
